{
  "name": "express-app",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "init": "npm run build-image && npm run start",
    "build-image": "docker build -t express-app .",
    "start": "docker-compose -p express-app up -d",
    "stop": "docker-compose -p express-app stop",
    "restart": "npm run stop && npm run start",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "local-start": "nodemon dist"
  },
  "dependencies": {
    "debug": "~2.6.9",
    "dotenv": "^16.0.0",
    "express": "~4.16.1",
    "express-validator": "^6.14.0",
    "http-errors": "~1.6.3",
    "morgan": "~1.9.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.23",
    "nodemon": "^2.0.15",
    "typescript": "^4.6.3"
  }
}
